---
import { socialLinks } from '../data/site-data';
import LinkCard from './LinkCard.astro';
import Icon from './Icon.astro';
---

<div class="card-professional p-8">
  <h3 class="text-2xl font-bold mb-6 text-center title-line-height">Find Me Online</h3>
  <div class="grid grid-cols-2 gap-4">
    {socialLinks.map(link => (
      <LinkCard href={link.url} text={link.name} isExternal={link.name !== 'Email'}>
        <Icon name={link.icon} className="h-8 w-8 text-primary" />
      </LinkCard>
    ))}
  </div>
</div>
