---
import { quickLinks } from '../data/site-data';
import LinkCard from './LinkCard.astro';
import Icon from './Icon.astro';
---

<div class="card-professional p-8 text-center">
  <h2 class="text-2xl font-bold mb-6 title-line-height">Explore My Work</h2>
  <div class="grid grid-cols-2 gap-4">
    {quickLinks.map(link => (
      <LinkCard href={link.url} text={link.name}>
        <Icon name={link.icon} className="h-8 w-8 text-primary" />
      </LinkCard>
    ))}
  </div>
</div>
