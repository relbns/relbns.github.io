---
interface Props {
  href: string;
  text: string;
  isExternal?: boolean;
  className?: string;
}

const { href, text, isExternal = false, className } = Astro.props;
---

<a
  href={href}
  target={isExternal ? '_blank' : undefined}
  rel={isExternal ? 'noopener noreferrer' : undefined}
  class:list={[
    'p-4 rounded-lg bg-muted hover:bg-muted/80 transition-all duration-300 hover-scale flex items-center gap-3',
    className
  ]}
>
  <slot />
  <span class="font-medium">{text}</span>
</a>
